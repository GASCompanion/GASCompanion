<?xml version="1.0" encoding="UTF-8"?>
<root>
	<docs_name>RenamedGASTemplate</docs_name>
	<class_id>GSCCharacterBase</class_id>
	<class_name>GSCCharacter Base</class_name>
	<shorttitle>Event On Attribute Change</shorttitle>
	<fulltitle>Event On Attribute Change</fulltitle>
	<description>Called when any of the attributes owned by this character are changed</description>
	<imgpath>../img/nd_img_OnAttributeChange.png</imgpath>
	<category>Add Event|GSC|Character</category>
	<inputs />
	<outputs>
		<param>
			<name>Output Delegate</name>
			<type>Delegate</type>
			<description></description>
		</param>
		<param>
			<name>Out</name>
			<type>Exec</type>
			<description></description>
		</param>
		<param>
			<name>Attribute</name>
			<type>Gameplay Attribute Structure</type>
			<description>The Attribute that was changed</description>
		</param>
		<param>
			<name>Delta Value</name>
			<type>Float</type>
			<description>It it was an additive operation, returns the modifier value. Or if it was a change coming from damage meta attribute (for health), returns the damage done.</description>
		</param>
		<param>
			<name>Event Tags</name>
			<type>Gameplay Tag Container Structure (by ref)</type>
			<description>The gameplay tags of the event that changed this attribute</description>
		</param>
	</outputs>
</root>
